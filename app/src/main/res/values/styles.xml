<resources>


    <style name="Widget.NewsApp.TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:maxLines">3</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAppearanceHeadline6">?attr/textAppearanceListItem</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


    <style name="Widget.NewsApp.DescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="textAppearanceCaption">?attr/textAppearanceCaption</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_half</item>
    </style>

    <style name="Widget.NewsApp.SourceText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/small_text_size_12sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

</resources>